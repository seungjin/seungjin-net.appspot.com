<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <welcome-file-list>
        <welcome-file>/</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/error</location>
    </error-page>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <servlet>
        <servlet-name>RootServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.RootServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RootServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.ErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/error/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JournalReaderServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.JournalReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JournalReaderServlet</servlet-name>
        <url-pattern>/journal/read/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JournalWriterServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.JournalWriterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JournalWriterServlet</servlet-name>
        <url-pattern>/journal/write/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MemoReaderServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.MemoReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemoReaderServlet</servlet-name>
        <url-pattern>/memo/read/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MemoWriterServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.MemoWriterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemoWriterServlet</servlet-name>
        <url-pattern>/memo/write/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MobileMemoReaderServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.mobile.MemoReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MobileMemoReaderServlet</servlet-name>
        <url-pattern>/mobile/memo/read/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MobileMemosWriterServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.mobile.MemoWriterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MobileMemosWriterServlet</servlet-name>
        <url-pattern>/mobile/memo/write/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MailHandlerServlet</servlet-name>
        <servlet-class>net.seungjin.appspot.MailHandlerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MailHandlerServlet</servlet-name>
        <url-pattern>/_ah/mail/*</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/_ah/mail/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>
